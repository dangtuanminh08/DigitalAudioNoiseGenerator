        <item name="colorPrimary">#FF85B6</item>
        <item name="colorPrimaryVariant">#F03690</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#62E7F4</item>
        <item name="colorSecondaryVariant">#55CCFF</item>
        <item name="colorOnSecondary">@color/black</item>
